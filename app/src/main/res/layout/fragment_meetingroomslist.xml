<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/loader"
    android:layout_gravity="center"
    android:minHeight="40dp"
    android:minWidth="40dp"
    android:visibility="gone"/>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/meetingrooms_list"
    android:name="saba.qazi.meetingrooms.meetingroomslist.MeetingRoomsListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutManager="LinearLayoutManager"
    tools:context=".meetingroomslist.MeetingRoomsListFragment"
    tools:listitem="@layout/meetingrooms_list_item"
    android:padding="10dp"/>
</LinearLayout>